<%# locals(inbox:, messages:, scope:) %>

<div id="<%= dom_id(inbox, "#{scope}_messages") %>" class="flex flex-wrap">
  <% messages.each do |message| %>
    <div class="basis-full border-2 rounded-sm mb-4 p-4">
      <%= render message %>
    </div>
  <% end %>

  <% if messages.none? %>
    <p class="mt-4 font-light">No <%= scope %> messages</p>
  <% end %>
</div>
